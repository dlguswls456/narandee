<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.signup.InfoActivity">

    <TextView
        android:id="@+id/info_name_tv"
        style="@style/bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="74dp"
        android:textColor="@color/narandee_green"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="풀먹는 쿠로미" />

    <TextView
        android:id="@+id/info_title_tv1"
        style="@style/semiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="74dp"
        android:text="@string/hello_script"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/info_name_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_title_tv_2"
        style="@style/semiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_script"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/info_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/info_name_tv" />

    <TextView
        android:id="@+id/gender_script"
        style="@style/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/gender_script"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/select_title_tv_2"
        app:layout_constraintTop_toBottomOf="@+id/select_title_tv_2" />

    <Spinner
        android:id="@+id/gender_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/spinner_dropdown"
        android:popupBackground="@drawable/spinner_dropdown_pop"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_script"
        tools:listitem="@layout/item_category_selected" />

    <TextView
        android:id="@+id/age_script"
        style="@style/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/age_script"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/gender_script"
        app:layout_constraintTop_toBottomOf="@+id/gender_category_spinner" />

    <Spinner
        android:id="@+id/age_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/spinner_dropdown"
        android:popupBackground="@drawable/spinner_dropdown_pop"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_script"
        tools:listitem="@layout/item_category_selected" />

    <Button
        android:id="@+id/info_next_btn"
        style="@style/regular"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_button"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>